<div id="editDiv">
  <h2>Edit this todo...</h2>

  <form action="/update/<%= @todo.id %>">
    <input class="input" name="description" type="text" value="<%= @todo.description %>">
    <input class=" input" name="pomodoro-estimate" type="number" value="<%= @todo.pomodoro_estimate %>">
    <input class="button add-new-todo-button" type="submit" value="Edit todo">
    <a href="/" class="go noColor">Go back...</a>
  </form>
</div>